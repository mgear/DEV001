<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
      <record id="course_form_view_inherit" model="ir.ui.view">
            <field name="name">course_form_view_inherit</field>
            <field name="model">digital_memory.course</field>
            <field name="inherit_id" ref="digital_memory.course_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet[1]" position="before">
                    <header>
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>
                </xpath>
                <xpath expr="//sheet[1]" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" help="Follow this project to automatically track the events associated to tasks and issues of this project." groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='is_done']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <field name="name" position="after">
                <field name="active"/>
                </field>
                
                <xpath expr="//group[1]" position="after">
                    <notebook>
                        <page string="Full Description">
                            <field name="description"/>
                        </page>
                        <page string="Attendees list">
                            <field name="attendees_ids" readonly="1"/>
                        </page>
                    </notebook>
                </xpath>
                <xpath expr="//div[1]" position="before">
                    <div class="oe_right oe_button_box" name="buttons">
                        <button class="oe_inline oe_stat_button"
                            type="object"
                            help="Show attendees in course"
                            name=""
                            icon="fa-users">
                                <field name="atnds_count" widget="statinfo" string="Attendees"/>
                        </button>
                    </div>
                </xpath>
            </field>                
        </record>
        <record id="res_partner_inherit" model="ir.ui.view">
            <field name="name">res_partner_inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='function']" position="before">
                    <field name="course_id"/>
                </xpath>
            </field>
        </record>
        <record id="attendees_action" model="ir.actions.act_window">
            <field name="name">Attendees List</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="attendees_action" id="attendees_menu" 
            parent="digital_memory.digital_memory_menu" 
            sequence="10" 
            name="Attendees"/>
    </data>
</openerp>
