<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

            <record model="ir.ui.view" id="course_form_view">
                <field name="name">course.form</field>
                <field name="model">digital_memory.course</field>
                <field name="arch" type="xml">
                    <form string="Digital Memory Form">
                            <sheet>
                                <div class="oe_title">
                                    <label for="name" class="oe_edit_only" string="Digital Memory Name" />
                                <h1><field name="name" /></h1>
                                </div>
                                <field name="is_done"/>
                                <separator string="General" colspan="2" />
                                    <group colspan="2" col="2">
                                        <field name="description" placeholder="Idea description..." />
                                    </group>
                            </sheet>
                    </form>
                </field>
            </record>

        <record model="ir.ui.view" id="course_list_view">
            <field name="name">course.list</field>
            <field name="model">digital_memory.course</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="course_search_view">
            <field name="name">course.search</field>
            <field name="model">digital_memory.course</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>

        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Courses</field>
            <field name="res_model">digital_memory.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first course
                </p>
            </field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="main_digital_memory_menu" name="Digital Memory"/>
        <!-- A first level in the left side menu is needed
             before using action= attribute -->
        <menuitem id="digital_memory_menu" name="Digital Memory"
                  parent="main_digital_memory_menu"/>
        <!-- the following menuitem should appear *after*
             its parent digital_memory_menu and *after* its
             action course_list_action -->
        <menuitem id="courses_menu" name="Courses" parent="digital_memory_menu"
                  action="course_list_action"/>
        <!-- Full id location:
             action="digital_memory.course_list_action"
             It is not required when it is the same module -->
    </data>
</openerp>